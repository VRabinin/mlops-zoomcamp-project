# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Docker Compose Port Configuration
POSTGRES_PORT=5432
MLFLOW_PORT=5000
PREFECT_PORT=4200
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Data Configuration
# Local filesystem paths (for direct Python execution)
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
FEATURE_STORE_PATH=data/features

# S3/MinIO Bucket Configuration  
MLFLOW_ARTIFACTS_BUCKET=mlflow-artifacts
DATA_LAKE_BUCKET=data-lake
MODEL_ARTIFACTS_BUCKET=model-artifacts

# S3/MinIO Data Path Configuration (paths within buckets)
S3_RAW_DATA_PATH=data/raw
S3_PROCESSED_DATA_PATH=data/processed
S3_FEATURES_DATA_PATH=data/features
S3_MODELS_PATH=models
S3_EXPERIMENTS_PATH=experiments
S3_PREFECT_FLOWS_PATH=prefect-flows

# Kaggle API (required for data download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Database Configuration
POSTGRES_USER=mlops_user
POSTGRES_PASSWORD=mlops_password
POSTGRES_HOST=mlops-postgres

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://localhost:${MLFLOW_PORT:-5000}
MLFLOW_ARTIFACT_LOCATION=s3://${MLFLOW_ARTIFACTS_BUCKET:-mlflow-artifacts}/
MLFLOW_S3_ENDPOINT_URL=http://mlflow-minio:9000
MLFLOW_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/mlflow

# Prefect Configuration
PREFECT_API_URL=http://localhost:${PREFECT_PORT:-4200}
PREFECT_API_KEY=your_prefect_api_key
PREFECT_WORK_POOL=default-agent-pool
PREFECT_API_DATABASE_CONNECTION_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/prefect

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=mlops-platform-artifacts

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://localhost:${MINIO_PORT:-9000}
MINIO_CONSOLE_URL=http://localhost:${MINIO_CONSOLE_PORT:-9001}

# Model Serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Architecture Services
STRUCTURIZR_PORT=8080
STRUCTURIZR_HOST=0.0.0.0
PLANTUML_PORT=8081
PLANTUML_HOST=0.0.0.0

# Monitoring
EVIDENTLY_WORKSPACE=monitoring_workspace
MONITORING_SCHEDULE=daily

# Security
SECRET_KEY=your_secret_key_here
API_KEY=your_api_key_here

# Infrastructure
TERRAFORM_WORKSPACE=development
NOMAD_ADDR=http://localhost:4646
CONSUL_HTTP_ADDR=http://localhost:8500

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# GitHub (for CI/CD)
GITHUB_TOKEN=your_github_token
