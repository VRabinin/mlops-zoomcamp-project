# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Docker Compose Port Configuration
POSTGRES_PORT=5432
REDIS_PORT=6379
MLFLOW_PORT=5000
PREFECT_PORT=4200
LOCALSTACK_PORT=4566
LOCALSTACK_PORT_RANGE_START=4510
LOCALSTACK_PORT_RANGE_END=4559

# Data Configuration
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
FEATURE_STORE_PATH=data/features

# Kaggle API (required for data download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://localhost:${MLFLOW_PORT:-5000}
MLFLOW_EXPERIMENT_NAME=crm-sales-prediction
MLFLOW_S3_ENDPOINT_URL=http://localhost:${LOCALSTACK_PORT:-4566}  # LocalStack S3

# Prefect Configuration
PREFECT_API_URL=http://localhost:${PREFECT_PORT:-4200}
PREFECT_API_KEY=your_prefect_api_key

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:${POSTGRES_PORT:-5432}/mlops
REDIS_URL=redis://localhost:${REDIS_PORT:-6379}

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=mlops-platform-artifacts

# LocalStack Configuration (for local development)
LOCALSTACK_ENDPOINT=http://localhost:${LOCALSTACK_PORT:-4566}
USE_LOCALSTACK=true

# Model Serving
MODEL_SERVING_HOST=0.0.0.0
MODEL_SERVING_PORT=8000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Architecture Services
STRUCTURIZR_PORT=8080
STRUCTURIZR_HOST=0.0.0.0
PLANTUML_PORT=8081
PLANTUML_HOST=0.0.0.0

# Monitoring
EVIDENTLY_WORKSPACE=monitoring_workspace
MONITORING_SCHEDULE=daily

# Security
SECRET_KEY=your_secret_key_here
API_KEY=your_api_key_here

# Infrastructure
TERRAFORM_WORKSPACE=development
NOMAD_ADDR=http://localhost:4646
CONSUL_HTTP_ADDR=http://localhost:8500

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# GitHub (for CI/CD)
GITHUB_TOKEN=your_github_token
